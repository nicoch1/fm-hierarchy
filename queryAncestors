queryAncestors(ID; IDField; parentField);

If(
  IsEmpty(ID);
  "";
  Let(
	    [ 	
	    ~parent=		  queryParent(ID;IDField;parentField);
    	$$ancestors=	Falls(
					              IstLeer(~parent); $$ancestors;
					              ~parent & "Â¶" & $$ancestors
				            )
	    ];

	    If(
		    IsEmpty(~parent);
		      Let(
			        [
			        ~ancestors=$$ancestors; 
			        $$ancestors = ""
			        ];
			        ~ancestors
		      );
		      queryAncestors(
              ~parent; 
              IDField;
              parentField
          )
	     )		
    )
)
